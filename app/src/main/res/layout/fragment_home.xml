<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
            android:id="@+id/labelTextView"
            android:text="@string/currentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="48dp"
            style="@style/LabelTextViewStyle"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="143dp"
    />
    <TextView
            android:id="@+id/currentTimeText"
            android:text="@string/currentTimeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ValueTextViewStyle"
            app:layout_constraintBaseline_toBaselineOf="@+id/labelTextView"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/capture_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeButton"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/currentTimeText"
            app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginStart="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>